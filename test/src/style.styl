@import 'nib'

global-reset()


notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

// tablet()
// 	@media only screen and (max-width: 960px)
// 			{block}

mobile()
	@media only screen and (max-width: 640px)
		{block}

.mq
	font-family 'pc'
	+mobile()
		font-family 'mobile'


//--------------------------------------------------

*, ::after, ::before
	box-sizing: border-box
	outline none

::selection,
::-moz-selection,
::-webkit-selection
	background white

html, body
	width 100%
	height 100%
	overflow hidden

html
	font-family: 'Alegreya Sans', sans-serif;
	font-smoothing antialiased
	-moz-osx-font-smoothing: grayscale
	font-size 24px

body
	background #193441
	color white
	line-height 1.8

a
	color #D1DBBD !important

hr
	border 1px solid white

//--------------------------------------------------

.header
	position absolute
	top 0.5rem
	left 1rem

	h1
		font-size 2rem

	ul
		list-style-type disc
		margin-left 1.5em


#canvas
	width 100%
	height 100%


#graph
	position absolute
	bottom 0
	width 100%
	height 30%
	z-index: 100
	background #FCFFF5
